{
  "name": "buddy",
  "description": "A fast, simple build tool for web projects.",
  "version": "6.0.0-beta",
  "author": "popeindustries <alex@pope-industries.com>",
  "keywords": [
    "build",
    "buildtool",
    "modules",
    "javascript",
    "js",
    "css",
    "html"
  ],
  "dependencies": {
    "async": "2.0.1",
    "babel-core": "6.14.0",
    "babel-plugin-external-helpers": "6.8.0",
    "buddy-cli": "*",
    "chalk": "1.1.3",
    "glob": "7.1.0",
    "inline-source": "5.1.0",
    "lodash": "4.16.2",
    "md5": "2.2.1",
    "minimatch": "3.0.3",
    "portscanner": "1.0.0",
    "recur-fs": "2.2.3",
    "yaw": "0.1.1"
  },
  "devDependencies": {
    "buddy-server": "*",
    "expect.js": "*",
    "mocha": "*",
    "rimraf": "*"
  },
  "main": "index.js",
  "bin": {
    "buddy": "node ./bin/buddy"
  },
  "scripts": {
    "build": "node ./bin/build",
    "test:all": "NODE_ENV=test mocha \"./packages/buddy-plugin-*/test/test.js\" \"./test/*-test.js\" --reporter spec --timeout 10000 --bail",
    "test": "NODE_ENV=test mocha \"./test/*-test.js\" --reporter spec --timeout 10000 --bail"
  },
  "engines": {
    "node": ">=6"
  },
  "repository": "git://github.com/popeindustries/buddy.git",
  "readmeFilename": "README.md",
  "license": "MIT",
  "buddy": {
    "input": "lib/buddy.js",
    "output": "index.js",
    "version": "node",
    "resolve": {
      "uglify-js": false,
      "svgo": false,
      "core-js": false
    }
  }
}
