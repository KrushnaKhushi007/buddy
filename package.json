{
  "name": "buddy",
  "description": "A fast, simple build tool for web projects.",
  "version": "7.0.0-beta",
  "author": "popeindustries <alex@pope-industries.com>",
  "keywords": [
    "build",
    "buildtool",
    "bundle",
    "bundler",
    "modules",
    "javascript",
    "js",
    "css",
    "html"
  ],
  "dependencies": {
    "async": "2.5.0",
    "autoprefixer": "7.1.2",
    "babel-core": "6.25.0",
    "babel-plugin-minify-dead-code-elimination": "0.1.7",
    "babel-plugin-transform-es2015-modules-commonjs": "6.24.1",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.6.0",
    "babel-runtime": "6.25.0",
    "browserslist": "2.3.2",
    "buddy-cli": "6.1.0",
    "chalk": "2.1.0",
    "chokidar": "1.7.0",
    "cssnano": "3.10.0",
    "glob": "7.1.2",
    "inline-source": "5.2.4",
    "lodash": "4.17.4",
    "md5": "2.2.1",
    "minimatch": "3.0.4",
    "portscanner": "2.1.1",
    "postcss": "6.0.9",
    "pretty-bytes": "4.0.2",
    "recur-fs": "2.2.4",
    "source-map": "0.5.6",
    "uglify-js": "3.0.27"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-preset-flow": "6.23.0",
    "chai": "^4.1.1",
    "chokidar-cli": "^1.2.0",
    "expect.js": "*",
    "flow-bin": "^0.52.0",
    "mocha": "*",
    "rimraf": "2.6.1"
  },
  "main": "./lib/buddy.js",
  "bin": {
    "buddy": "./bin/buddy"
  },
  "scripts": {
    "build": "babel src -d lib",
    "build:all": "babel src -d lib",
    "example": "./bin/example",
    "install:packages": "./bin/packages install",
    "outdated:packages": "./bin/packages outdated",
    "test:all": "NODE_ENV=test yarn run build:all && mocha \"./packages/buddy-*/test/test.js\" \"./test/*-test.js\" --reporter spec --timeout 20000 --bail",
    "test": "NODE_ENV=test mocha \"./test/**/*-test.js\" --reporter spec --timeout 20000 --bail",
    "test:windows": "set NODE_ENV=test&&node.exe ./node_modules/mocha/bin/mocha --reporter spec -t 20000 --bail",
    "perf:build": "NODE_ENV=test node perf/build.js",
    "perf:config": "NODE_ENV=test node perf/config.js",
    "inspect": "NODE_ENV=test node --inspect --debug-brk perf/build.js",
    "watch": "yarn run build && chokidar src/**/*.js -c 'yarn run build'"
  },
  "engines": {
    "node": ">=6"
  },
  "repository": "git://github.com/popeindustries/buddy.git",
  "readmeFilename": "README.md",
  "license": "MIT"
}
