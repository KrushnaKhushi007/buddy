#!/usr/bin/env node

'use strict';

const { execSync: exec } = require('child_process');
const fs = require('fs');
const path = require('path');

fs.readdirSync(path.resolve('packages'))
  .forEach((resource) => {
    if (/^buddy-/.test(resource)) {
      exec('yarn', { cwd: path.resolve(__dirname, '../packages', resource), stdio: 'inherit' });
    }
  });