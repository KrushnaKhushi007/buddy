#!/usr/bin/env node

'use strict';

const { execSync: exec } = require('child_process');
const fs = require('fs');
const path = require('path');

fs.readdirSync(path.resolve('packages'))
  .forEach((resource) => {
    const dirpath = path.resolve(__dirname, '../packages', resource);

    if (fs.statSync(dirpath).isDirectory()) {
      exec('npm install', { cwd: dirpath, stdio: 'inherit' });
    }
  });